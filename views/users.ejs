<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Users Admin Panel</title>
        <%- include('./components/imports.ejs') %>
    </head>
    <body>
        <div class="dark:bg-gray-700"><%- include('./components/navbar.ejs', {language, user}) %></div>
        <div class="container mx-auto p-4">
            <div class="fs-2 mb-4">Admin Panel for Users</div>
            <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="py-3 px-6">ID</th>
                            <th scope="col" class="py-3 px-6">Name</th>
                            <th scope="col" class="py-3 px-6">Username</th>
                            <th scope="col" class="py-3 px-6">Is Admin</th>
                            <th scope="col" class="py-3 px-6">Created At</th>
                            <th scope="col" class="py-3 px-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((us) => { %>
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                            <th scope="row" class="py-4 px-6 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= us._id %></th>
                            <td class="py-4 px-6"><%= us.name %></td>
                            <td class="py-4 px-6"><%= us.login %></td>
                            <td class="py-4 px-6"><%= us.isAdmin ? "Yes" : "No" %></td>
                            <td class="py-4 px-6"><%= us.created_at?.toLocaleDateString() %></td>
                            <td class="py-4 px-6">
                                <a href="/admin/users/edit/<%= us._id %>" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Edit</a>
                                <a href="/admin/users/delete/<%= us._id %>" class="font-medium text-red-600 dark:text-red-500 hover:underline ml-4">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <%- include('./components/footer.ejs') %>
    </body>
</html>
